{
  "configurations": {
    "rust - launch": {
      "adapter": "CodeLLDB",
      "configuration": {
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceRoot}/target/debug/rlox",
        "args": [
          "*${Args}"
        ],
        "sourceLanguages": [
          "rust"
        ]
      },
      "breakpoints": {
        "exception": {
          "cpp_throw": "Y",
          "cpp_catch": "N"
        }
      }
    }
  }
}
